<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".playActivity">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/quiz"
        android:layout_gravity="center"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/textTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hear is your Question ?"
        android:textColor="#D3D0D0"
        android:textSize="25dp"
        android:textStyle="bold"
        android:gravity="center"
        android:background="@drawable/text_edet"
        android:padding="15sp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="30dp"/>


    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <RadioButton
            android:id="@+id/optionBtn1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/edit_clar"
            android:text="Option 1"
            android:textColor="#F6F6F6"
            android:textSize="20dp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/optionBtn2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Option 2"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#F5EEF1"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/edit_clar"
            android:layout_marginTop="20dp"/>


        <RadioButton
            android:id="@+id/optionBtn3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Option 3"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#EAE5E7"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/edit_clar"
            android:layout_marginTop="20dp"/>

        <RadioButton
            android:id="@+id/optionBtn4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Option 4"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#EBE7E9"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/edit_clar"
            android:layout_marginTop="20dp"/>

    </RadioGroup>




    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Next Question..?"
        android:textColor="#EFEBEB"
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_marginTop="100dp"
        android:layout_marginHorizontal="30dp"
        android:background="@drawable/bton_clae"/>




</LinearLayout>